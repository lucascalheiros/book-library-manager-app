<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.github.lucascalheiros.booklibrarymanager.ui.pdfReader.PdfReaderViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pdfReader.PdfReaderFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            pdfPageAdapterRenderer="@{viewModel.renderer}"
            pdfPageAdapterReadingPercentageListener="@{viewModel.mPageTracker}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </FrameLayout>
</layout>